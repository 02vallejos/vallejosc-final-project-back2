<h1 class="bg-success-subtle p-2 text-center text-success w-100"> PRODUCTS DETAIL </h1>
<section class="d-flex flex-wrap justify-content-evenly ">
<div id="opts" class="d-flex justify-content-end m-3"></div>
<div class="card m-1" style="width: 12rem;">
  <img src={{product.image}} class="card-img-top" alt={{product._id}}>
  <div class="card-body">
    <h5 class="card-title">{{product.title}}</h5>
    <p class="card-text">${{product.price}}</p>
    <button class="btn btn-success" href="#" >Add to cart</button>
    <div id="opt_admin" data-product-id="{{product._id}}"></div>
  </div>
</div>
</section>

<script src="/scripts/details.js"></script>