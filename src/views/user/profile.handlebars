<div class="card m-1" style="width: 12rem;">
  <img src={{user.avatar}} class="card-img-top object-fit-cover" alt={{user._id}}>
  <div class="card-body">
    {{#if user.name}}
    <p class="card-title">Nombre: {{user.name}}</p>
    {{/if}}
    <h3 class="card-text">Email: {{user.email}}</h3>
    {{#if user.date}}
    <p class="card-text">Nacimiento: {{user.date}}</p>
    {{/if}}
    {{#if user.city}}
    <p class="card-text">Ciudad: {{user.city}}</p>
    {{/if}}
     {{#if user.role}}
    <p class="card-text">Role: {{user.role}}</p>
    {{/if}}
    <a href="/user/update-user" class="btn btn-success" href="#">Update</a>
  </div>
</div>